    {
      "name": "Inventory",
      "description": "Seed and inspect stock levels.",
      "item": [
        {
          "name": "Adjust Inventory",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const poolRaw = pm.environment.get('sku_pool');",
                  "if (poolRaw) {",
                  "  const pool = poolRaw.split(',').map(s => s.trim()).filter(Boolean);",
                  "  if (pool.length) {",
                  "    const pick = pool[Math.floor(Math.random() * pool.length)];",
                  "    pm.environment.set('inventory_sku', pick);",
                  "  }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"delta\": 20,\n  \"reason\": \"seed\"\n}"
            },
            "url": {
              "raw": "{{inventory_base_url}}/inventory/{{inventory_sku}}/adjust",
              "host": [
                "{{inventory_base_url}}"
              ],
              "path": [
                "inventory",
                "{{inventory_sku}}",
                "adjust"
              ]
            }
          }
        },
        {
          "name": "Get Inventory Item",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{inventory_base_url}}/inventory/{{inventory_sku}}",
              "host": [
                "{{inventory_base_url}}"
              ],
              "path": [
                "inventory",
                "{{inventory_sku}}"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Orders",
      "description": "Create, inspect, and update orders via the public API.",
      "item": [
        {
          "name": "Create Order",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const mode = (pm.environment.get('sku_mode') || '').toLowerCase();",
                  "if (mode === 'order') {",
                  "  const poolRaw = pm.environment.get('sku_pool');",
                  "  if (poolRaw) {",
                  "    const pool = poolRaw.split(',').map(s => s.trim()).filter(Boolean);",
                  "    if (pool.length) {",
                  "      const pick = pool[Math.floor(Math.random() * pool.length)];",
                  "      pm.environment.set('inventory_sku', pick);",
                  "    }",
                  "  }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customerId\": \"{{customer_id}}\",\n  \"amountCents\": {{order_amount_cents}},\n  \"currency\": \"{{order_currency}}\",\n  \"items\": [\n    {\n      \"sku\": \"{{inventory_sku}}\",\n      \"qty\": 1\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{order_base_url}}/orders",
              "host": [
                "{{order_base_url}}"
              ],
              "path": [
                "orders"
              ]
            }
          }
        },
        {
          "name": "Get Order By ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{order_base_url}}/orders/{{order_id}}",
              "host": [
                "{{order_base_url}}"
              ],
              "path": [
                "orders",
                "{{order_id}}"
              ]
            }
          }
        },
        {
          "name": "Update Order Status",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"{{order_status}}\"\n}"
            },
            "url": {
              "raw": "{{order_base_url}}/orders/{{order_id}}/status",
              "host": [
                "{{order_base_url}}"
              ],
              "path": [
                "orders",
                "{{order_id}}",
                "status"
              ]
            }
          }
        }
      ]
    },
